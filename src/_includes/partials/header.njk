<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow-sm">
  <div class="container">
    <a class="navbar-brand d-flex align-items-center gap-2" href="#hero">
      {% if site.logo %}
        <img src="{{ site.logo }}" alt="{{ site.name }}" class="site-header__logo">
      {% endif %}
      <span class="fw-semibold text-uppercase small tracking-wide">{{ site.name }}</span>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
            aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-end" id="mainNav">
      <ul class="navbar-nav mb-2 mb-lg-0">
      {% for item in nav %}
        <li class="nav-item ms-lg-3">
          <a
            class="nav-link text-uppercase small"
            href="{{ item.href }}"
            {% if item.title == "Donate" %}style="color: #dc7d2c;"{% endif %}
          >
            {{ item.title }}
          </a>
        </li>
      {% endfor %}
      </ul>
    </div>
